{{!< default}}

<main class="site-content" role="main">

  {{#post}}

  <article class="{{post_class}}" data-permalink="{{url absolute="true"}}">

    <a class="back-link" href="/">Back to the front page</a>

    <h1 class="post-title">{{title}}</h1>

    <aside>
      <div class="post-data">
        <p>
          Posted on <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time>
          {{#if author}}by {{author.name}}{{/if}}
        </p>
      </div>
    </aside>

    <section class="post-content rte">
      {{content}}
    </section>

    <footer class="post-footer">

<!--       {{#if tags}}
      <div class="post-tags">
        <strong>Tags:</strong> {{tags separator=" , "}}
      </div>
      {{/if}} -->

      <div class="post-share">
        <a target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}" class="share-facebook"><span>Like</span> <span class="share-count"></span></a>

        <a target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" class="share-twitter"><span>Tweet</span> <span class="share-count"></span></a>

        <a target="_blank" href="//plus.google.com/share?url={{url absolute="true"}}" class="share-google"><span></span> <span class="share-count">+1</span></a>
      </div>

    </footer>

    <!-- Disqus Comments -->
    <div class="comments">
      <h2 class="secondary-title">Comments</h2>
      <div id="disqus_thread"></div>
      <script type="text/javascript">var disqus_shortname = 'engineeringalphasights';
        (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();</script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript><a class="dsq-brlink" href="http://disqus.com">comments powered by <span class="logo-disqus">Disqus</span></a>
    </div>

  </article>

  {{/post}}

</main>
